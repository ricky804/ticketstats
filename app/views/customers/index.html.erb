<!--Default layout -->
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span2">
      <!--Sidebar content-->
      <%= render :partial => "particial/sidemenu2" %>
    </div>
    <div class="span10">
      <!--Here goes the body content -->
      <h1> Customers </h1>
      <p><%= link_to "Add customer", new_customer_path, class: "btn" %></p>
      <table class="table table-striped table-hover">
        <% @customer.each do |c| %>
          <tr>
            <td><%= c.name %></td>
            <td><%= link_to "View", customer_path(c), class: "btn" %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>



