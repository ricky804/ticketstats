div class="container-fluid"
  div class="row-fluid"
    div class="span2"
      <!--Sidebar content-->
      = render :partial => "particial/sidemenu2"
    div class="span10"
      <!--Here goes the body content -->
      h1 = @customer.name
      p class="text-right" =@number_of_tickets_created
      table class="table"
        thead
          tr
            th Email
            th Customer
        tbody
          - @email.each do |email|
            tr
              td= link_to email.email, email_path(email)
              td= email.customer.name

      table class="table table-striped table-hover"
        thead
          tr
            th Favorite
            th Ticket
            th Subject
            th CreatedBy
            th LastUpdated
            th Status
        tbody
          - @rttickets.each do |ticket|
            tr
              td
                a class="btn btn-small"
                  i class="icon-star-empty"
              td = ticket.id
              td = ticket.Subject
              td = ticket.rtuser.EmailAddress
              td = ticket.LastUpdated
              td = ticket.Status
      = link_to "Delete", customer_path(@customer), method: :delete, :confirm => "Are you sure?", class: "btn"

