<div class="container-fluid">
  <div class="row-fluid">
    <div class="span2">
      <%= render :partial => "partial/sidemenu2" %>
    </div>
    <div class="span8">
      <div class="section_title">Requestors</div>
      <div style="padding-bottom: 80px">
        <span class="pull-left">
          <form class="form-search">
            <input type="text" class="input-medium search-query">
            <button type="submit" class="btn">Search</button>
          </form>
        </span>
      </div>
      <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Requestor</th>
              <th>Customer</th>
              <th>View</th>
            </tr>
          </thead>
        <% @requestors.each do |requestor| %>
          <tr>
            <td><%= requestor.email %></td>
            <td><%= link_to requestor.customer.name, customer_path(requestor.customer) %></td>
            <td><%= link_to "View", requestor_path(requestor), class: "btn" %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>



