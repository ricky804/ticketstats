<div class="container-fluid">
  <div class="row-fluid">
    <div class="span2">
      <%= render partial: "partial/sidemenu2" %>
    </div>
    <div class="span8">
      <table class="table">
        <thead>
          <tr>
            <th colspan=2 class="section_title"><%= @requestor.email %></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Total number of created tickets</td>
            <td><%= badge_important @total_number_of_created_tickets %></td>
          </tr>
          <tr>
            <td>Number of tickets currently open </td>
            <td><%= badge_important @open_tickets.count %></td>
          </tr>
        </tbody>
      </table>

      <div> <%= high_chart("chartid1", @created_tickets_chart) %> </div>

      <p class="section_title">Tickets currently open</p>
      <% if @open_tickets.empty? %>
        <div class="well well-large"> All tickets are closed </div>
      <% else %>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Ticket</th>
              <th>Subject</th>
              <th>LastUpdated</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
          <% @open_tickets.each do |ticket| %>
            <tr>
              <td><%= link_to ticket.id, ticket_url(ticket.id), target: "_blank" %></td>
              <td><%= ticket.Subject %></td>
              <td><%= ticket.LastUpdated %></td>
              <td><%= ticket.Status %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      <% end %>

      <p class="section_title">All tickets created by requestor</p>
      <% if @all_created_tickets.empty? %>
        <div class="well well-large"> No data </div>
      <% else %>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Ticket</th>
              <th>Subject</th>
              <th>LastUpdated</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
          <% @all_created_tickets.each do |ticket| %>
            <tr>
              <td><%= link_to ticket.id, ticket_url(ticket.id), target: "_blank" %></td>
              <td><%= ticket.Subject %></td>
              <td><%= ticket.LastUpdated %></td>
              <td><%= ticket.Status %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      <% end %>
     </div>
  </div>
</div>







