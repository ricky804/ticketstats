<!--Default layout -->
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span2">
      <!--Sidebar content-->
      <%= render :partial => "particial/sidemenu1" %>
    </div>
    <div class="span10">
      <!--Here goes the body content -->
      <h1> My Tickets </h1>
      <p class="text-right"> <%= @total_number_of_tickets_created_by_user %> Found </p>

      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Favorite</th>
            <th> <%= link_to "Ticket", :page => params[:page] %></th>
            <th> <%= link_to "Subject", :page => params[:page] %></th>
            <th> <%= link_to "Last Update", :page => params[:page] %></th>
            <th> <%= link_to "Status", :page => params[:page]%></th>
          </tr>
        </thead>
        <tbody>
        <% @total_tickets_created_by_user.each do |ticket| %>
          <tr>
            <td>
              <% if ticket.favorited?(current_user.id, ticket.id) %>
                <%= link_to "Favorited", nil, class: "btn btn-info" %>
              <% else %>
                <a href=<%= "##{ticket.id}_mymodal" %> data-toggle="modal" class="btn">Favorite</a>
              <% end %>
            </td>
            <td><%= ticket.id %></td>
            <td><%= ticket.Subject %></td>
            <td><%= ticket.LastUpdated %></td>
            <td><%= ticket.Status %></td>
          </tr>
          <%= render partial: "particial/modalnote", locals: {ticket: ticket} %>
        <% end %>
        </tbody>
      </table>
      <!-- paginate -->
      <div class="flickr_pagination">
         <%= will_paginate @total_tickets_created_by_user %>
       </div>
     </div>
  </div>
</div>




