<!--Default layout -->
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span2">
      <!--Sidebar content-->
      <%= render :partial => "particial/sidemenu1" %>
    </div>
    <div class="span10">
      <!--Here goes the body content -->
      <h1> My Tickets </h1>
      <p class="text-right"> <%= @total_number_of_tickets_created_by_user %> found </p>

      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Favorite</th>
            <th> <%= link_to "Ticket", :page => params[:page] %></th>
            <th> <%= link_to "Subject", :page => params[:page] %></th>
            <th> <%= link_to "CreatedBy", :page => params[:page] %></th>
            <th> <%= link_to "Last Update", :page => params[:page] %></th>
            <th> <%= link_to "Status", :page => params[:page]%></th>
          </tr>
        </thead>
        <tbody>
        <% @total_tickets_created_by_user.each do |ticket| %>
            <tr>
              <td><a class="btn btn-small" href="#"><i class="icon-star-empty"></i></a></td>
              <td><%= ticket.id %></td>
              <td><%= ticket.Subject %></td>
              <td><%= ticket.rtuser.EmailAddress rescue "No Name" %>
              <td><%= ticket.LastUpdated %></td>
              <td><%= ticket.Status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <!-- paginate -->
      <div class="flickr_pagination">
           <%= will_paginate @total_tickets_created_by_user %>
      </div>
    </div>
  </div>
</div>



